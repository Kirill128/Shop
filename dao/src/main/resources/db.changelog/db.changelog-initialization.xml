<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	<changeSet author="kirill" id="1">
		<createTable tableName="user">
			<column autoIncrement="true" name="user_id" type="int">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="user_email" type="VARCHAR(255)"/>
			<column name="user_phone" type="VARCHAR(255)"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="2">
		<createTable tableName="role">
			<column autoIncrement="true" name="role_id" type="int">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="role_name" type="VARCHAR(255)"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="3">
		<createTable tableName="user_role">
			<column name="user_id" type="int">
				<constraints references="" foreignKeyName=""/>
			</column>
			<column name="role_id" type="int"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="4">
		<createTable tableName="category">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="5">
		<createTable tableName="provider">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="6">
		<createTable tableName="photo">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="7">
		<createTable tableName="product">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="8">
		<createTable tableName="order">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>
	<changeSet author="kirill" id="9">
		<createTable tableName="product_position">
			<column autoIncrement="true" name="id" type="SERIAL">
				<constraints nullable="false"/>
			</column>
			<column name="user_name" type="VARCHAR(255)"/>
			<column name="preferences" type="TEXT"/>
		</createTable>
	</changeSet>

</databaseChangeLog>